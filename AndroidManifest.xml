<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.axioma.taskmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.INTERNET"/>    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.axioma.taskmanager.TaskFinderActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.axioma.taskmanager.ShowTasksActivity"
            android:label="@string/tasks" >
        </activity>
        <activity
            android:name="com.axioma.taskmanager.ShowTaskDetailsActivity"
            android:label="@string/task_details" >
        </activity>
        <activity
            android:name="com.axioma.taskmanager.AppSettingsActivity"
            android:label="@string/action_settings" > 
        </activity>
    </application>

</manifest>